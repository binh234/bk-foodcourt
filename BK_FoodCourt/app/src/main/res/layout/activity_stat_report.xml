<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatReportActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="393dp"
        android:layout_height="77dp"
        android:background="#8BC34A"
        android:fontFamily="sans-serif-condensed-medium"
        android:paddingTop="10sp"
        android:text="@string/total_revenues_by_vendor"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/Vendor_Chart_Button"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/vendor_chart"
        android:scaleType="fitCenter"
        android:src="@drawable/vendor__chart"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/vendor__chart"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="393dp"
        android:layout_height="77dp"
        android:background="#8BC34A"
        android:fontFamily="sans-serif-condensed-medium"
        android:paddingTop="10sp"
        android:text="@string/total_revenue_by_item"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/Item_Chart_Button"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:contentDescription="@string/item_chart"
        android:src="@drawable/itemchart"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:src="@drawable/itemchart"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>